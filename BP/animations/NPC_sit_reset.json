{
	"format_version": "1.10.0",
	"animations": {
		"animation.sit_reset": {
			"loop": true,
			"timeline": {
				"0.0": [
					"/event entity @s tavern_reset_chair_path",
					"/function dev/chair_reset_counter",
					"/scoreboard players add @s chair_counter 1"
				]
			},
			"animation_length": 5
		},
		"animation.sit_counter": {
			"loop": true,
			"timeline": {
				"0.0": [
					"/scoreboard players set @s chair_counter 0"
				]
			}
		}
	}
}